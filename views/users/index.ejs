<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Users</title>
  <style>table{width:100%;border-collapse:collapse}th,td{padding:8px;border:1px solid #ccc}</style>
</head>
<body>
  <h1>Users</h1>
  <p><a href="/users/new">Create new user</a> | <a href="/">Back</a></p>
  <table>
    <thead>
      <tr><th>ID</th><th>Name</th><th>Email</th><th>Phone</th><th>Actions</th></tr>
    </thead>
    <tbody>
      <% if (users && users.length) { %>
        <% users.forEach(function(user){ %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td>
              <a href="/users/edit/<%= user.id %>">Edit</a>
              <form action="/users/delete/<%= user.id %>" method="post" style="display:inline" onsubmit="return confirm('Delete user?')">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="5">No users found</td></tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>